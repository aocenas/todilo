{
  "name": "todilo",
  "version": "1.0.0",
  "description": "todo app",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "js-build": "./node_modules/.bin/browserify js/app.jsx -t babelify -o static/js/app.js --debug",
    "js-watch": "./node_modules/.bin/watchify js/app.jsx -t babelify -o static/js/app.js --debug -v",
    "css-watch": "sass --watch styles/todilo.scss:static/css/todilo.css"
  },
  "author": "andrej ocenas",
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.1.2",
    "lodash": "^3.9.3",
    "react": "^0.13.3",
    "request-promise": "^0.4.2"
  },
  "devDependencies": {
    "babel-core": "^5.5.3",
    "babel-jest": "^5.2.0",
    "babelify": "^6.1.2",
    "browserify": "^10.2.3",
    "jest-cli": "^0.4.5",
    "watchify": "^3.2.1"
  },
  "jest": {
    "testDirectoryName": "tests",
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "testFileExtensions": [
      "es6",
      "js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "es6"
    ],
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react"
    ]
  }
}
